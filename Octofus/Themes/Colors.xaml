<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Color x:Key="PrimaryColor">#b33c41</Color>
    <Color x:Key="SecondaryColor">#e7b8ba</Color>

    <SolidColorBrush x:Key="PrimaryBrush" Color="{DynamicResource PrimaryColor}"/>
    <SolidColorBrush x:Key="SecondaryBrush" Color="{DynamicResource SecondaryColor}"/>

    <LinearGradientBrush x:Key="PressedGradient" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#b33c41" Offset="0.3"/>
        <GradientStop Color="White" Offset="1.5"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="MouseOverGradient" StartPoint="0,1" EndPoint="0,0">
        <GradientStop Color="#b33c41" Offset="0.3"/>
        <GradientStop Color="White" Offset="1.5"/>
    </LinearGradientBrush>
</ResourceDictionary>